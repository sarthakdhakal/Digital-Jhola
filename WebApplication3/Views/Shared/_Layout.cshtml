                                <a asp-action="Index" asp-controller="Home"><h3 class="text-danger">Ecommerce</h3></a>
                            </div>

                            <ul class="flat-contact">
                                <li class="address">address : Helwan Street</li>
                                <li class="phone">phone : +02 124356789</li>
                                <li class="email">gmail : mohamed@gmali.com</li>
                            </ul><!-- /.flat-contact -->
