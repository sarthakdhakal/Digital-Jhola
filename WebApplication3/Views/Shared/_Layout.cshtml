                                </li>
                                <li>
                                    <a href="/Home/Shop">SHOP</a>
                                </li>
                                <li>
                                    <a href="/ContactAbout/About">About Us</a>
                                </li>
                                <li>
                                    <a href="/ContactAbout/Contact">Contact Us</a>
                                </li>
                            </ul>
                        </nav><!-- /.mainnav -->
                    </div><!-- /.nav-wrap -->
                </div><!-- /.container-fluid -->
            </header><!-- /header -->
        </div><!-- /.site-header-wrap -->

        @RenderBody()

      
        <!-- Footer -->
        <footer class="footer">
            <div class="container" >
                <div class="row">
                    <div class="col-md-3">
                        <div class="widget widget-link">
                            <ul>
                                @* <li><a href="/ContactAbout/About">About Us</a></li> *@
                                @* <li><a href="/ContactAbout/Contact">Contact Us</a></li> *@
                            </ul>
                        </div><!-- /.widget -->
                    </div><!-- /.col-md-3 -->
                    <div class="col-md-3">
                        <div class="widget widget-link link-login">
                            <ul>
                                @if (!SignInManager.IsSignedIn(User))
                                {
                                    <li><a href="/Identity/Account/login">Login </a></li>
                                    <li><a href="/Identity/Account/Register">Register</a></li>
                                    <li><a href="/ShoppingCart/EditShoppingCart">Your Cart</a></li>
                                }
