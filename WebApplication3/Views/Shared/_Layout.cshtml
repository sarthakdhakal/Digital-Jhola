                <div class="row">
                    <div class="col-md-12">
                        <p class="copyright text-center">Copyright @DateTime.Now.Year copy&<a href="#">Ecommerce</a></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Go Top -->
        <a class="go-top">
            <i class="fa fa-chevron-up"></i>
        </a>

    </div>
