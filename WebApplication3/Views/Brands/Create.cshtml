@model Brand
@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutDashboard";
}

<div class="row vh-100">
<div class="d-table-cell align-middle">
    <div class="text-left mt-4">
        <h1 class="h2">Add new brand</h1>
        <p class="lead">
            Please provide the following details to add a brand.
        </p>
    </div>


    <div class="card">
        <div class="card-body">
            <div class="m-sm-4"></div>
            <form id="CreatCat" class="validate-form" asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label class="form-label" asp-for="BrandName"></label>
                    <input asp-for="BrandName" type="text" class="form-control form-control-lg">
                    <span asp-validation-for="BrandName" class="text-theme-6"></span>
                </div>
                <div>
                    <label class="form-label" asp-for="BrandDescription"></label>
                    <input asp-for="BrandDescription" type="text" class="form-control form-control-lg">
                    <span asp-validation-for="BrandDescription" class="text-theme-6"></span>
                </div>

                <div class="mt-3">
                    <label class="form-label">Brand Image</label>
                    <div class="border-2 border-dashed rounded-md mt-3 pt-4">

                        <div class="px-4 pb-4 flex items-center cursor-pointer relative">
                            <i data-feather="image" class="w-4 h-4 mr-2"></i> <span class="text-theme-1 mr-1">Upload a file</span>
                            <input id="filePhoto" type="file" name="file" class="form-control form-control-lg">
                        </div>
                    </div>
                </div>

                @*<div>
            <label asp-for="File"></label>
            <input asp-for="File" class="input w-full border mt-2" />
        </div>*@

                <div class="mb-3">
                    <a asp-action="Index" class="button w-24 border text-gray-700 mr-1" onclick="ajaxRender(event)">Back to List</a>
                    <button type="submit" class="btn btn-lg btn-primary">Create</button>

                </div>

            </form>
        </div>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}