@model IEnumerable<WebApplication3.Models.OrderItems>
@{
    Layout = null;


}
@{
    string firstname = null;
    string lastname = null;
    string street = null;
    string city = null;
    string province = null;
    DateTime orderdate = default;
    double sum = 0;
    foreach (var item in Model)
    {
        firstname = item.Order.Buyer.Firstname;
        lastname = item.Order.Buyer.Lastname;
        street = item.Order.Street;
        city = item.Order.City;
        province = item.Order.Province;
        orderdate = item.Order.OrderDate;

    }
}
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="~/Home/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="~/Invoice/style.css">


</head>
<body>
<div class="container">
    <div class="row gutters">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body p-0">
                    <div class="invoice-container">
                        <div class="invoice-header">
                            <!-- Row start -->

                            <!-- Row end -->
                            <!-- Row start -->
                            <div class="row gutters">
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                    <a href="#" class="invoice-logo">
                                        Digital Jhola
                                    </a>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <address class="text-right">
                                        Jorpati.<br>
                                        Kathmandu.<br>
                                        446600
                                    </address>
                                </div>
                            </div>
                            <!-- Row end -->
                            <!-- Row start -->
                            <div class="row gutters">
                                <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                                    <div class="invoice-details">
                                        <address>
                                            @firstname @lastname
                                            
                                            <br>
                                            @street, @city, @province
                                        </address>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                                    <div class="invoice-details">
                                        <div class="invoice-num">
                                            <div></div>
                                            <div>@orderdate</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Row end -->
                        </div>
                        <div class="invoice-body">
                            <!-- Row start -->
                            <div class="row gutters">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="table-responsive">
                                        <table class="table custom-table m-0">
                                            <thead>
                                            <tr>
                                                <th>Items</th>
                                                <th>Quantity</th>
                                                <th>Price</th>
                                                <th>Sub Total</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var items in Model)
                                            {
                                                <tr>
                                                    @{
                                                        var total = items.Product.ProductUnitPrice * items.Quantity;
                                                        sum = sum + total;
                                                    }
                                                    <td>
                                                        @items.Product.ProductName
                                                        <p class="m-0 text-muted">
                                                            @items.Product.ProductDescription
                                                        </p>
                                                    </td>
                                                    <td>@items.Quantity</td>
                                                    <td>NPR @items.Product.ProductUnitPrice</td>
                                                    <td>NPR @total</td>
                                                </tr>
                                            }

                                            <tr>
                                                <td>&nbsp;</td>
                                                <td colspan="2">
                                                    <p>
                                                        Subtotal<br>
                                                      
                                                    </p>
                                                    <h5 class="text-success">
                                                        <strong>Grand Total</strong>
                                                    </h5>
                                                </td>
                                                <td>
                                                    <p>
                                                       NPR @sum
                                                        
                                                    </p>
                                                    <h5 class="text-success">
                                                        <strong>NPR @sum</strong>
                                                    </h5>
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- Row end -->
                        </div>
                        <div class="invoice-footer">
                            Thank you for shopping with us.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>