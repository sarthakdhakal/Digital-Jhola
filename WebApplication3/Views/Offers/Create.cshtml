@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@model WebApplication3.Models.Offer
@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutDashboard";
}

  

<hr />
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <div class="intro-y box p-5">
            <form id="CreateOffer" class="validate-form" asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label class="flex flex-col sm:flex-row" asp-for="OfferName">@Html.DisplayNameFor(e => e.OfferName) <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, at least 2 characters</span> </label>
                    <input type="text" asp-for="OfferName" class="input w-full border mt-2" minlength="2" required>
                    <span asp-validation-for="OfferName" class="text-theme-6"></span>
                </div>

                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="Sale">
                        @Html.DisplayNameFor(e => e.Sale)
                        <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required, numbers only</span>
                    </label>
                    <input type="number" step="0.01" min="1" max="99" asp-for="Sale" class="input w-full border mt-2" required>
                    <span asp-validation-for="Sale" class="text-theme-6"></span>
                </div>
                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="DateFrom">
                        @Html.DisplayNameFor(e => e.DateFrom)
                        <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required</span>
                    </label>
                    <input type="date" asp-for="DateFrom" class="input w-full border mt-2" required>
                    <span asp-validation-for="DateFrom" class="text-theme-6"></span>
                </div>
                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="DateTo">
                        @Html.DisplayNameFor(e => e.DateTo)
                        <span class="sm:ml-auto mt-1 sm:mt-0 text-xs text-gray-600">Required</span>
                    </label>
                    <input type="date" asp-for="DateTo" class="input w-full border mt-2" required>
                    <span asp-validation-for="DateTo" class="text-theme-6"></span>
                </div>

                <div class="mt-3">
                    <label class="flex flex-col sm:flex-row" asp-for="Products">
                        Products
                    </label>
                    <select data-placeholder="Select Products in Offer" name="MyProducts"  class="form-control" id="simpleSelect2" multiple>
                        @foreach (var product in ViewBag.Products as ICollection<Product>)
                        {
                            if (product.UserId==ViewBag.UserId || ViewBag.UserRoleAdmin==true)
                            {
                                <option value="@product.ProductId">@product.ProductName</option>
                            }
                        
                        }

                    </select>
                </div>



                <div class="text-right mt-5">
                    <a asp-action="Index" class="button w-24 border text-gray-700 mr-1" onclick="ajaxRender(event)">Back to List</a>
                    <button type="submit" class="button w-24 bg-theme-1 text-white">Create</button>

                </div>
            </form>

        </div>

    </div>
</div>


<script>
      $(document).ready(function () {
               $("#simpleSelect2").select2();
           });
   </script>

