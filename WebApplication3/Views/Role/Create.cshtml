@model WebApplication3.Models.RoleViewModel

@{
    ViewBag.Title = "Create";
    Layout = "_Layout";
}

<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <!-- BEGIN: Form Layout -->
        <form id="CreateRole" class="validate-form" asp-action="Create" asp-controller="Role" enctype="multipart/form-data" method="post">
        <div class="intro-y box p-5">
            <div>
                <label>Role Name</label>
                <input type="text" id="Name" name="firstName" class="input w-full border mt-2" placeholder="Role Name">
            </div>

            <div class="text-right mt-5">

                <button type="submit" name="submit" class="button w-24 bg-theme-1 text-white">Create</button>
            </div>
        </div>
        </form>
        <!-- END: Form Layout -->
    </div>
</div>