@model Microsoft.AspNetCore.Identity.IdentityRole
    <div class="grid grid-cols-12 gap-6 mt-5">
        <div class="intro-y col-span-12 lg:col-span-6">
            <!-- BEGIN: Form Layout -->
            <div class="intro-y box p-5">
                <div>
                    <label>Role Name</label>
                    <input type="text" id="Name" value="@Model.Name" class="input w-full border mt-2" placeholder="Role Name">
                </div>

                <div class="text-right mt-5">

                    <button type="button" onclick="Edit('@Model.Id')" class="button w-24 bg-theme-1 text-white">Save</button>
                </div>
            </div>
            <!-- END: Form Layout -->
        </div>
    </div>