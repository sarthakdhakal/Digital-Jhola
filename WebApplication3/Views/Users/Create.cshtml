@model AddSellerViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="container" style="min-height:700px;position:relative;top:60px;">


    <div class="row">
        <div class="col-md-4 offset-2">
            <form method="post" enctype="multipart/form-data" asp-action="Create">
                <h4 class="text-center">Register</h4>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="Firstname"></label>
                    </div>

                    <div class="col-9">
                        <div class="form-group">

                            <input asp-for="Firstname" class="form-control"/>
                            <span asp-validation-for="Firstname" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="Lastname"></label>
                    </div>

                    <div class="col-9">
                        <div class="form-group">

                            <input asp-for="Lastname" class="form-control"/>
                            <span asp-validation-for="Lastname" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="PhoneNumber"></label>
                    </div>

                    <div class="col-9">
                        <div class="form-group">

                            <input type="tel" asp-for="PhoneNumber" pattern="[0-9]{10}" class="form-control"/>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="Email"></label>
                    </div>

                    <div class="col-9">
                        <div class="form-group">

                            <input asp-for="Email" class="form-control"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-3">
                        <label asp-for="Password"></label>
                    </div>

                    <div class="col-9">
                        <div class="form-group">

                            <input asp-for="Password" class="form-control"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-3">
                        <label asp-for="ConfirmPassword"></label>
                    </div>
                    <div class="col-9">
                        <div class="form-group">

                            <input asp-for="ConfirmPassword" class="form-control"/>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-3">
                        <label asp-for="Street"></label>
                    </div>

                    <div class="col-9">
                        <div class="form-group">

                            <input asp-for="Street" class="form-control"/>
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-3">
                        <label asp-for="City"></label>
                    </div>

                    <div class="col-9">
                        <div class="form-group">

                            <input asp-for="City" class="form-control"/>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="Province"></label>
                    </div>

                    <div class="col-9">
                        <div class="form-group">

                            <input asp-for="Province" class="form-control"/>
                            <span asp-validation-for="Province" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-3">
                        <label asp-for="image"></label>
                    </div>
                    <div class="col-9">
                        <div class="form-group">

                            <input id="" onchange="loadFile(event)" type="file" asp-for="image"/>
                            <span asp-validation-for="image" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="SellerDocument"></label>
                    </div>
                    <div class="col-9">
                        <div class="form-group">

                            <input id="" onchange="loadFile(event)" type="file" asp-for="SellerDocument"/>
                            <span asp-validation-for="SellerDocument" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <button type="submit" name="submit" class="btn btn-danger btn-block mt-2">Register</button>
            </form>
        </div>
        <div class="col-md-4">
            <section>
                <br/>
                <img src="@Url.Content("~/img/defaultimg.png")" id="output" alt="" class="img-thumbnail mt-4" style="width:300px;height:300px; border-radius:40%"/>
            </section>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}