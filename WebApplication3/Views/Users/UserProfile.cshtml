@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_LayoutDashboard";
}
@{
    var imgurl = ViewBag.user.image == null ? "defaultimg.png" : ViewBag.user.image;
}
<div class="row mb-2 mb-xl-3">
    <div class="col-auto d-none d-sm-block">
        <h3 class="h3 mb-3">User Profile</h3>
    </div>


    <div class="row">
        <div class="col-md-4 col-xl-12">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title mb-0"></h5>
                </div>
                <div class="card-body text-center">


                    <img src="~/img/@ViewBag.user.image" alt="Christina Mason" class="img-fluid rounded-circle mb-2" width="128" height="128"/>
                    <h3 class="card-title mb-0">@ViewBag.user.Firstname @ViewBag.user.Lastname </h3>
                    <div class="text-muted mb-2">


                        <p class="card-title mb-0">Seller</p>

                    </div>
                    @if (@ViewBag.user.ApprovalStatus == 0)
                    {
                        <form id="OrderStatus" class="validate-form" asp-action="ApproveUser" enctype="multipart/form-data" method="post">
                            <input type="hidden" name="id" value="@ViewBag.user.Id"/>

                            <div class="form-group">
                                <input type="submit" value="Approve" class="btn btn-primary"/>
                            </div>
                        </form>
                        <form id="OrderStatus" class="validate-form" asp-action="DeleteUser" enctype="multipart/form-data" method="post">
                            <input type="hidden" name="id" value="@ViewBag.user.Id"/>

                            <div class="form-group">
                                <input type="submit" value="Delete" class="btn btn-danger"/>
                            </div>
                        </form>

                    }
                    

                </div>
                <hr class="my-0"/>

                <hr class="my-0"/>
                <div class="card-body">
                    <h5 class="h6 card-title">About</h5>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><span data-feather="at-sign" class="feather-sm me-1"></span> Username : @ViewBag.user.Email</li>
                        <li class="mb-1"><span data-feather="home" class="feather-sm me-1"></span> Address : @ViewBag.user.Street,@ViewBag.user.City, @ViewBag.user.Province</li>

                        <li class="mb-1"><span data-feather="phone" class="feather-sm me-1"></span> Contact :<a href="#"> @ViewBag.user.PhoneNumber </a></li>
                        <li class="mb-1"><span data-feather="mail" class="feather-sm me-1"></span> Email : @ViewBag.user.Email<a href="#"></a></li>
                    </ul>
                </div>
                @if (ViewBag.Document != null)
                {
                    
                    <div class="card-body">
                        <h2 class="card-title">Seller Document</h2>

                        <img src="~/UserDocument/images/@ViewBag.Document.ImagePath" id="output" alt="" class="img-thumbnail mt-2" style="width:300px;height:300px;"/>
                    </div>
                }
            </div>

        </div>
    </div>
</div>