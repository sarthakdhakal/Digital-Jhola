@model Category
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class="intro-y flex flex-col sm:flex-row items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        Adding New Category
    </h2>
    <div class="w-full sm:w-auto flex mt-4 sm:mt-0">
        <a class="button text-white bg-theme-1 shadow-md mr-2" asp-action="Index" onclick="ajaxRender(event)">Back To List</a>
    </div>
</div>
<form id="CreatCat" asp-action="Create" enctype="multipart/form-data" method="post">
    <div>
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName " type="text" class="input w-full border mt-2">
        <span asp-validation-for="CategoryName" class="text-theme-6"></span>
    </div>
    <div>
        <label asp-for="CategoryDescription"></label>
        <input asp-for="CategoryDescription " type="text" class="input w-full border mt-2">
        <span asp-validation-for="CategoryDescription" class="text-theme-6"></span>
    </div>

    <div class="mt-3">
        <label>Category Image</label>
        <div class="border-2 border-dashed rounded-md mt-3 pt-4">
            <div class="flex flex-wrap px-4">
                <div id="imgViewer" class="w-24 h-24 relative image-fit mb-5 mr-5 cursor-pointer zoom-in" hidden>
                    <img id="previewHolder" class="rounded-md" alt="Midone Tailwind HTML Admin Template" src="">
                    <div onclick="removeImg()" title="Remove this image?" class="tooltip w-5 h-5 flex items-center justify-center absolute rounded-full text-white bg-theme-6 right-0 top-0 -mr-2 -mt-2"> <i data-feather="x" class="w-4 h-4"></i> </div>
                </div>
            </div>
            <div class="px-4 pb-4 flex items-center cursor-pointer relative">
                <i data-feather="image" class="w-4 h-4 mr-2"></i> <span class="text-theme-1 mr-1">Upload a file</span> or drag and drop
                <input id="filePhoto" type="file" name="file" class="w-full h-full top-0 left-0 absolute opacity-0">
            </div>
        </div>
    </div>

    @*<div>
            <label asp-for="File"></label>
            <input asp-for="File" class="input w-full border mt-2" />
        </div>*@

    <div class="sm:ml-20 sm:pl-5 mt-5">
        <button type="submit" class="button w-24 bg-theme-1 text-white">Create</button>
    </div>

</form>











